    },
}

struct Any {
    ty: *TypeInfo,
    value: *_T!,
}

fn any_of(value: *_T!) Any! {
    return Any {
        ty: #type_info(T),
        value: value,
    };
}

fn print_type_info_param(p: TypeInfoParam, \indent: i64) {
    print_indent();
    print_string(p.name);
    print_string(": ");
    print_type_with_indent(*p.ty);
}

fn print_indent(\indent: i64) {
    let i = 0i64;
    while i < indent {
        print_string("  ");
        i = i + 1;
    }
}

fn print_type_with_indent(t: TypeInfo, \indent: i64) {
    if let I32 = t {
        print_indent(indent);
        print_string("i32\n");
    }
    else if let I64 = t {
        print_indent(indent);
        print_string("i64\n");
    }
    else if let F32 = t {
        print_indent(indent);
        print_string("f32\n");
    }
    else if let F64 = t {
        print_indent(indent);
        print_string("f64\n");
    }
    else if let Bool = t {
        print_indent(indent);
        print_string("bool\n");
    }
    else if let Struct(s) = t {
        print_string("struct");
        if let Some(name) = s.name {
            print_string(" ");
            print_string(name);
        }
        print_string(" {\n");
        for p in s.params {
            print_type_info_param(p, indent + 1);
        }
        print_string("}\n");
    }
    else if let Enum(e) = t {
        print_string("enum");
        if let Some(name) = e.name {
            print_string(" ");
            print_string(name);
        }
        print_string(" {\n");
        for p in e.params {
            print_type_info_param(p, indent + 1);
        }
        print_string("}\n");
    }
    else if let Pointer(p) = t {
        print_indent(indent);
        print_string("*");
        print_type(*p);
    }
    else {
        print_indent(indent);
        print_string("unknown\n");
    }
}

fn print_type(t: TypeInfo) {
    let \indent = 0;
    print_type_with_indent(t);
}

fn heapify(v: _T!) *T {
    let a = #cast(*T) malloc(#size_of(T));
    *a = v;
    return a;
}

fn freeify(v: *_T!) {
    free(#cast v);
}

