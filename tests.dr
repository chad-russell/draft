fn test_default_match() i64 {
    enum Option {
        All,
        Some: i64,
        None,
    }

    let o = Option::Some(3);

    let r = match o {
        Some(a): {
            print_string("Some: a = ");
            print_i64(a);
            break 5;
        }
        _: {
            print_string("Catch-all\n");
            break 8;
        }
    };
    print_i64(r);
    
    o = Option::None();

    r = match o {
        Some(a): {
            print_string("Some: a = ");
            print_i64(a);
            break 5;
        }
        _: {
            print_string("Catch-all\n");
            break 8;
        }
    };
    print_i64(r);

    return 0;
}

